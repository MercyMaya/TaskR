<?xml version="1.0" encoding="utf-8"?>
<!--
In the following lines, we define a shape with a subtle gradient
and a stroke that we will override in code for priority.
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background gradient (optional) -->
    <gradient
        android:startColor="@color/futuristicCardBackground"
        android:centerColor="@color/futuristicCardBackgroundDark"
        android:endColor="@color/futuristicCardBackground"
        android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- We'll override this stroke color in code -->
    <stroke
        android:width="2dp"
        android:color="@android:color/transparent" />

    <!-- Padding so text/checkboxes aren't against the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
