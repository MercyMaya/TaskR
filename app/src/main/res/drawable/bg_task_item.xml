<?xml version="1.0" encoding="utf-8"?>
<!-- A shape drawable for task items. Feel free to tweak colors and corners. -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- A gradient background or a solid color -->
    <gradient
        android:startColor="@color/futuristicCardBackground"
        android:centerColor="@color/futuristicCardBackgroundDark"
        android:endColor="@color/futuristicCardBackground"
        android:angle="90" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional stroke around the shape -->
    <stroke
        android:width="1dp"
        android:color="@color/highContrastText" />

    <!-- Padding so text/checkboxes arenâ€™t pressed against the edges -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
