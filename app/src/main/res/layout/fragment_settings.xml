<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="8dp"
    android:background="@color/futuristicBackground">

    <!-- Dark Mode label -->
<TextView
android:id="@+id/tvDarkModeLabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Dark Mode"
android:textColor="@color/highContrastText"
android:textSize="18sp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintLeft_toLeftOf="parent"/>

    <!-- Switch for enabling Dark Mode -->
    <Switch
        android:id="@+id/switchDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Enable Dark Mode"
        android:minWidth="48dp"
        android:minHeight="48dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDarkModeLabel"
        app:layout_constraintRight_toRightOf="parent" />

    <!-- Text Size label -->
<TextView
android:id="@+id/tvTextSizeLabel"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Text Size"
android:textColor="@color/highContrastText"
android:textSize="18sp"
app:layout_constraintTop_toBottomOf="@+id/tvDarkModeLabel"
app:layout_constraintLeft_toLeftOf="parent"
android:layout_marginTop="16dp"/>

    <!-- SeekBar for text size -->
<SeekBar
android:id="@+id/seekBarTextSize"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:max="30"
app:layout_constraintTop_toBottomOf="@+id/tvTextSizeLabel"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent" />

    <!-- Sample text for previewing text size changes -->
<TextView
android:id="@+id/tvSampleText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Sample Text"
android:textColor="@color/highContrastText"
android:textSize="16sp"
app:layout_constraintTop_toBottomOf="@+id/seekBarTextSize"
app:layout_constraintLeft_toLeftOf="parent"
android:layout_marginTop="16dp"/>

    <!-- The new Logout button -->
<Button
android:id="@+id/btnLogout"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Logout"
android:layout_marginTop="24dp"
app:layout_constraintTop_toBottomOf="@+id/tvSampleText"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
