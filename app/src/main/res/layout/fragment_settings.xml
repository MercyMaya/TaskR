<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/futuristicBackground">

    <TextView
        android:id="@+id/tvDarkModeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dark Mode"
        android:textColor="@color/highContrastText"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Switch
        android:id="@+id/switchDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvDarkModeLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="Enable Dark Mode" />

    <TextView
        android:id="@+id/tvTextSizeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Size"
        android:textColor="@color/highContrastText"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/tvDarkModeLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>

    <SeekBar
        android:id="@+id/seekBarTextSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="30"
        app:layout_constraintTop_toBottomOf="@+id/tvTextSizeLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tvSampleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sample Text"
        android:textColor="@color/highContrastText"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/seekBarTextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
